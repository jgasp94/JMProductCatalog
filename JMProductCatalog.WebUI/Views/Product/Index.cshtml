@model IEnumerable<JMProductCatalog.App.DTOs.ProductDTO>
@{
    ViewData["Title"] = "Gerenciamento do Produto";
}

<div class="row">
    <div class="col-12">
        <div class="pull-left">@ViewData["Title"]</div>
    </div>
</div>
<div class="col-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Price)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Description)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Stock)
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes" class="btn btn-warning btn-sm"><span class="fas fa-search"></span>Detalhes</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-itemid="@item.Id" title="Editar" class="btn btn-info btn-sm"><span class="fas fa-edit"></span>Editar</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Excluir" class="btn btn-danger btn-sm"><span class="fas fa-trash"></span>Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>